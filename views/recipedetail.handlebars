<div class="recipe-detail">
  <h1>{{title}}</h1>
   <div class="author">
    <h2>Author:{{userID}}</h2>
  </div>
  <div class="ingredients">
    <h2>Ingredients:</h2>
    <ul>
      {{#each ingredients}}
        <li>{{this}}</li>
      {{/each}}
    </ul>
  </div>
  <div class="instructions">
    <h2>Instructions:</h2>
    <ol>
      {{#each instructions}}
        <li>{{this}}</li>
      {{/each}}
    </ol>
  </div>
</div>